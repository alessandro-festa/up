apiVersion: v1
kind: Secret
metadata:
  name: {{ include "suse-ai-up.fullname" . }}-service-auth
  labels:
    {{- include "suse-ai-up.labels" . | nindent 4 }}
type: Opaque
data:
  {{- if .Values.serviceApiKeys }}
  api-key: {{ .Values.serviceApiKeys | b64enc }}
  {{- else }}
  # Default API key for development - should be changed in production
  api-key: {{ "dev-service-key-123" | b64enc }}
  {{- end }}